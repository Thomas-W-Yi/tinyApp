<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <div class="container">
      <div class="row">
        <div class="col-lg-6">
          <a class="navbar-brand" href="/urls">TinyApp</a>
          <button
            class="navbar-toggler"
            type="button"
            data-toggle="collapse"
            data-target="#navbarNavAltMarkup"
            aria-controls="navbarNavAltMarkup"
            aria-expanded="false"
            aria-label="Toggle navigation"
          >
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
            <div class="navbar-nav">
              <a class="nav-item nav-link" href="/urls">My URLs</a>
              <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
            </div>
          </div>
        </div>
        <div class="col-lg-6">
          <div class="form-group">
            <% if (!user) { %>
            <form action="/login" method="POST">
              <label for="">username</label
              ><input type="text" name="username" /><button btn btn-primary>
                submit
              </button>
            </form>
            <% } else { %>
            <form action="/logout" method="POST">
              <label for=""
                >Logged In As:
                <h4><%= user%></h4></label
              ><button btn btn-primary>Logout</button>
            </form>
          </div>
        </div>
        <% } %>
      </div>
    </div>
  </nav>
</header>
