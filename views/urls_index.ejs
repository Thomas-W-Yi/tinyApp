<%- include('./partials/head.ejs', {title: 'TinyApp'}) %>
<%- include('./partials/header.ejs', {users, cookies})%>
<main>
    <div class="jumbotron">
      <h3>My URLs</h3>
      <table class="table">
        <thead>
          <tr>
            <th scope ='col'>Short URL</th>
            <th scope='col'>Long URL</th>
            <th scope='col'>Date Created</th>
            <th scope='col'>Visits</th>
            <th scope='col'>Visitors</th>
            <th scope='col'>Edit</th>
            <th scope='col'>Delete</th>
          </tr>
        </thead>
        <tbody>
          <% for (let obj of database) { %>
            <tr>
              <td><%= obj.shortURL %></td>
              <td><%= obj.longURL %></td>
              <td><%= obj.dateCreated %></td>
              <%if (!obj.totalVisits){%>
                <td>0</td>
                <td>0</td>
              <%} else{%>
                <td><%= obj.totalVisits %></td>
                <td><%= obj.totalVisitors %></td>
              <%}%>
                <td><form method="GET", action=<%= `/urls/${obj.shortURL}` %>><button type="submit" class="btn btn-outline-primary">Edit</button></form></td>
              <td><form method="POST", action=<%= `/urls/${obj.short}?_DELETE` %>><button type="submit"class="btn btn-outline-danger">Delete</button></form></td>
            </tr>
          <% } %>
        </tbody>
      </table>
      </ul>
    </div>
</main>
<%- include('./partials/footer.ejs') %>