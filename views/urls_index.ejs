<%- include('./partials/head.ejs', {title: 'TinyApp'}) %>
<%- include('./partials/header.ejs') %>
<main>
    <div class="jumbotron">
      <h3>My URLs</h3>
      <table class="table">
        <thead>
          <tr>
            <th scope ='col'>Short URL</th>
            <th scope='col'>Long URL</th>
            <th scope='col'>Delete</th>
          </tr>
        </thead>
        <tbody>
          <% for (let urlKey in urlDatabase) { %>
            <tr>
              <td><%= urlKey %></td>
              <td><%= urlDatabase[urlKey] %></td>
              <td><form method="GET", action=<%= `/urls/${urlKey}` %>><button type="submit">Edit</button></form></td>
              <td><form method="POST", action=<%= `/urls/${urlKey}/delete` %>><button type="submit">Delete</button></form></td>
            </tr>
          <% } %>
        </tbody>
      </table>
      </ul>
    </div>
</main>
<%- include('./partials/footer.ejs') %>